{
    "name": "juanwong/jc-framework",
    "description": "Simple PHP framework inspired by Laravel",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Jc\\": "src/"
        },
        "files": [
            "src/Helpers/app.php",
            "src/Helpers/http.php"
        ]
    },
    "scripts": {
        "tests": "phpunit --color=always --testdox tests/",
        "php-cs-fixer": "php-cs-fixer fix --diff"
    },
    "autoload-dev": {
        "psr-4": {
            "Jc\\Tests\\": "tests"
        }
    },

    "authors": [
        {
            "name": "JuanWong",
            "email": "juanwong0211@gmail.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^10.3",
        "friendsofphp/php-cs-fixer": "^3.34"
    }
}
